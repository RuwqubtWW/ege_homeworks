#include <iostream>
#include <string>
#include <fstream>
using namespace std;

int main()
{
    int count1 =0;


char arr[6]={'A','B','C','D','E','F'};

    ifstream F("C:\\Users\\podli\\Desktop\\Инфа_ЕГЭ\\k7c-6.txt");
  string s;
